@*/Pages/Admin/Scopes.cshtml*@

@page
@model AppraisalPortal.Pages.Admin.ScopesModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]

@{
    ViewData["Title"] = "Manager / GM Scopes";
}

<h2 class="mb-3">Manager / General Manager Scopes</h2>

<div class="row g-3">
    <div class="col-12 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-header fw-semibold">Add / Update Single Scope</div>
            <div class="card-body">
                <form method="post" asp-page-handler="Upsert" class="row g-2">
                    <div class="col-6">
                        <label class="form-label">Emp Code</label>
                        <input class="form-control" name="EmpCode" required />
                    </div>
                    <div class="col-6">
                        <label class="form-label">Scope Type</label>
                        <select class="form-select" name="ScopeType">
                            <option value="ReportingManager">Reporting Manager</option>
                            <option value="GeneralManager">General Manager</option>
                        </select>
                    </div>
                    <div class="col-12">
                        <label class="form-label">Departments (only for General Manager)</label>
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var d in Model.KnownDepartments)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="Departments" value="@d" id="d_@d.Replace(" ", "_")" />
                                    <label class="form-check-label" for="d_@d.Replace(" ", "_")">@d</label>
                                </div>
                            }
                        </div>
                        <div class="form-text">Tick the departments this GM can view.</div>
                    </div>
                    <div class="col-12">
                        <label class="form-label">Notes (optional)</label>
                        <input class="form-control" name="Notes" />
                    </div>
                    <div class="col-12 d-grid">
                        <button class="btn btn-primary">Save Scope</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-header fw-semibold">Bulk Mark Reporting Managers</div>
            <div class="card-body">
                <form method="post" asp-page-handler="Bulk" class="row g-2">
                    <div class="col-12">
                        <label class="form-label">Paste Emp Codes (comma/space/newline separated)</label>
                        <textarea class="form-control" name="Codes" rows="5" placeholder="1, 2, 6, 7, 10, 13, ..."></textarea>
                    </div>
                    <div class="col-12 d-grid">
                        <button class="btn btn-secondary">Add / Ensure Manager Role + Scope</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@if (TempData["Msg"] is string m)
{
    <div class="alert alert-success mt-3">@m</div>
}
@if (TempData["Err"] is string e)
{
    <div class="alert alert-danger mt-3">@e</div>
}

<div class="card shadow-sm mt-4">
    <div class="card-header fw-semibold">Existing Scopes</div>
    <div class="card-body table-responsive">
        <table class="table table-sm align-middle">
            <thead>
                <tr><th>EmpCode</th><th>Name</th><th>Type</th><th>Departments</th><th>Notes</th><th></th></tr>
            </thead>
            <tbody>
                @foreach (var s in Model.Scopes)
                {
                    <tr>
                        <td>@s.ManagerEmployee.EmpCode</td>
                        <td>@s.ManagerEmployee.Name</td>
                        <td>@s.ScopeType</td>
                        <td>
                            @if (s.ScopeType == "GeneralManager")
                            {
                                <span>@string.Join(", ", s.Departments.Select(x => x.Department))</span>
                            }
                        </td>
                        <td>@s.Notes</td>
                        <td class="text-end">
                            <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Delete this scope?')">
                                <input type="hidden" name="id" value="@s.Id" />
                                <button class="btn btn-outline-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
