@*/Pages/CEO/All.cshtml*@

@page
@model AppraisalPortal.Pages.CEO.AllModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "CEO,Admin")]

<h2>All Appraisals (CEO)</h2>
<table class="table table-sm">
    <thead><tr><th>Employee</th><th>Cycle</th><th>Status</th><th>Final</th><th></th></tr></thead>
    <tbody>
        @foreach (var f in Model.Items)
        {
            <tr>
                <td>@f.Employee.Name</td>
                <td>@f.Cycle.Name</td>
                <td>@f.Status</td>
                <td>@f.FinalScore</td>
                <td><a class="btn btn-sm btn-primary" asp-page="/Reports/Summary" asp-route-id="@f.Id">View</a></td>
            </tr>
        }
    </tbody>
</table>