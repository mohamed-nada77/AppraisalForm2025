@{
    var msg = TempData["Msg"] as string;
    var err = TempData["Err"] as string ?? TempData["ErrWipe"] as string ?? TempData["ErrWipeEmp"] as string;
}
@if (!string.IsNullOrWhiteSpace(msg))
{
    <div class="toast align-items-center text-bg-success border-0 show" role="alert">
        <div class="d-flex">
            <div class="toast-body"><i class="bi bi-check-circle me-2"></i>@msg</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
}
@if (!string.IsNullOrWhiteSpace(err))
{
    <div class="toast align-items-center text-bg-danger border-0 show mt-2" role="alert">
        <div class="d-flex">
            <div class="toast-body"><i class="bi bi-exclamation-triangle me-2"></i>@err</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
}
